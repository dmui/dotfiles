# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------
typeset -U path
path=(. ./bin /usr/local/bin /usr/local/sbin $HOME/.rbenv/shims $DOTFILES/bin $path)

# ------------------------------------------------------------------------------
# MANPATH
# ------------------------------------------------------------------------------
typeset -U manpath
manpath=(/usr/local/man /usr/local/mysql/man /usr/local/git/man /usr/share/man $manpath)

# ------------------------------------------------------------------------------
# FPATH
# ------------------------------------------------------------------------------
fpath=($DOTFILES/zsh/functions /usr/local/share/zsh-completions $fpath)

# ------------------------------------------------------------------------------
# HELPDIR
# ------------------------------------------------------------------------------
unalias run-help
autoload run-help
HELPDIR=/usr/local/share/zsh/helpfiles
